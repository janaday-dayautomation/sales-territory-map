      <h2>Territory</h2>
      <div class="placeholder">Click a region to view reps.</div>
      <ul id="reps"></ul>
    </div>
  </div>

  <script>
    // Replace this with your real data. I provided placeholders for each region.
    const repsByTerritory = {
      "Western New York": ["Rep A", "Rep B"],
      "Finger Lakes": ["Rep C", "Rep D"],
      "Central New York": ["Rep E"],
      "Mohawk Valley": ["Rep F"],
      "North Country": ["Rep G"],
      "Capital Region": ["Rep H"],
      "Southern Tier": ["Rep I"],
      "Mid-Hudson": ["Rep J"],
      "New York City": ["Rep K"],
      "Long Island": ["Rep L"]
    };

    function show(territory) {
      const box = document.getElementById('info');
      const title = box.querySelector('h2');
      const list = document.getElementById('reps');
      const placeholder = box.querySelector('.placeholder');

      title.textContent = territory;
      list.innerHTML = '';

      const reps = repsByTerritory[territory] || [];
      if (reps.length === 0) {
        placeholder.textContent = 'No reps assigned yet.';
        placeholder.style.display = 'block';
        return;
      }

      placeholder.style.display = 'none';
      reps.forEach(name => {
        const li = document.createElement('li');
        li.textContent = name;
        list.appendChild(li);
      });
    }
  </script>
